{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "incremental": true,
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "paths": {
    "@options/*": [
      "../options/*"
    ],
    "@client/*": [
      "../client/*"
    ],
    "@map/*": [
      "../map/*"
    ]
  },
  "include": [
    "vite.config.ts"
  ]
}
