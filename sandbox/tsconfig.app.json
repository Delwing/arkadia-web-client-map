{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./src",
      "./node_modules/@types"
    ],
    "paths": {
      "@extension/*": [
        "../extension/*"
      ],
      "@client/*": [
        "../client/*"
      ],
      "@map/*": [
        "../map/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
