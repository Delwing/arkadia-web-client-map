{
  "name": "Arkadia Map Extension",
  "manifest_version": 3,
  "version": "1",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon32.png",
    "default_popup": "options/index.html"
  },
  "commands": {
    "reload": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Reload ext"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://arkadia.rpg.pl/*"
      ],
      "js": [
        "dist/main.js"
      ],
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "embedded.html"
      ],
      "matches": [
        "<all_urls>"
      ],
      "dynamic_url": true
    }
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": false
  },
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "commands",
    "https://arkadia.rpg.pl/*"
  ],
  "host_permissions": [
    "https://arkadia.rpg.pl/*"
  ]
}