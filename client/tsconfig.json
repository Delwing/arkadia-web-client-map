{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "include": ["src"]
}
